<table id="proucts-table" class="table table-sm">
  <thead>
    <tr>
      <th scope="col" >Product</th>
      <th scope="col" >Brand</th>
      <th scope="col" >Category</th>
      <th scope="col" >Price</th>
    </tr>
  </thead>
  <tbody scope="col">
    <% order.cart_items.includes([:product]).each do |item| %>
      <tr scope="row">
        <td>
          <%= item.product.name %>
        </td>
        <td>
          <%= item.product.brand.name %>
        </td>
        <td>
          <%= item.product.category.name %>
        </td>
        <td>
          <%= number_to_currency(item.product.price) %>
        </td>
      </tr>
    <% end %>
  </tbody>
  <tfoot class="h3 border-bottom table-border-primary">
    <tr scope="row">
      <th>
        Total: 
      </th>
      <td>
        <%= number_to_currency(order_presenter.total) %>
      </td>
    </tr>
  </tfoot>
</table>
