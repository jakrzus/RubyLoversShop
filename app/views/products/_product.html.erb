<div class="col-10">
  <div class="card product-card">
    <% if product.photos.any? %>
      <%= image_tag product.photos.first, class: "card-img-top product-card-img mt-3" %>
    <% else %>
      <%= image_tag "http://placehold.it/700x400", class: "card-img-top product-card-placeholder-img mt-3" %>
    <% end %>
    <div class="card-body">
      <h4 class="card-title"><%= product.name %></h4>
      <h6><%= product.brand.name %></h6>
      <h6><%= product.category.name %></h6>
      <h5><%= number_to_currency(product.price) %></h5>
      <p class="card-text"><%= product.description %></p>
    </div>
    <div class="card-footer">
      <%= form_with  url: add_product_path(product), method: :post, local: true do |f| %>
        <div class="form-row align-items-center">
          <div class="col-auto">
            <%= f.label :quantity, "Quantity:" %>
            <%= f.number_field :quantity, min: 1 %>
          </div>
          <div class="col-auto">
            <%= f.submit "Add to cart", disable_with: 'Adding...', class: "btn btn-primary mb-2" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
